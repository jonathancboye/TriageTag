<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriageTagApplication.ActivitiesPage">
    <StackLayout VerticalOptions="Fill"
                 HorizontalOptions="Fill">
        <Button x:Name="scanTagButton"
                Text="Scan Tag"
                Clicked="OnScanTagButtonClicked"/>
        
        <Button x:Name="editMedicalDataButton"
                Text="Edit Medical Data"
                Clicked="OnEditMedicalDataButtonClicked"/>

        <Button x:Name="synchronizeButton"
                Text="Synchronize"
                Clicked="OnSynchronizeButtonClicked"/>
      
      <Button x:Name="addUserButton"
               Text="Add New User"
               Clicked="OnaddUserButtonClicked"/>

      <Button x:Name="deleteUser"          
              Text="Delete User"
              Clicked="OndeleteButtonClicked"/>
      
        <Button x:Name="logoutButton"
                Text="Logout Button"
                Clicked="OnLogoutButtonClicked"/>
    </StackLayout>
</ContentPage>